.header
  .container.clearfix
    nav.navbar.navbar-expand-md.navbar-light.bg-light
      a.navbar-brand(href='/') ReviewPhim
      button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse.justify-content-end
        form.form-inline.my-2.my-lg-0
          input#search-bar.form-control.mr-sm-2(type='search' placeholder='Search' aria-label='Search')
          button#search-btn.btn.btn-outline-danger.my-2.my-sm-0(type='submit') Search
        ul.navbar-nav
          li.nav-item
            a.nav-link(href='/') Home
          if isAuthenticated
              li.nav-item
              a.nav-link(href='/users/profile') Profile
              li.nav-item
              a.nav-link(href='/users/logout') Logout
          else
              li.nav-item
              a.nav-link(href='/users/register') Register
              li.nav-item
              a.nav-link(href='/users/login') Login