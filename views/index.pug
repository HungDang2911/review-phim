doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet', href='vendors/bootstrap-4.4.1-dist/css/bootstrap.min.css')
  link(rel='stylesheet', href='vendors/fontawesome-free-5.13.0-web/css/all.min.css')
  link(rel='stylesheet', href='vendors/fontawesome-free-5.13.0-web/css/fontawesome.min.css')
  link(rel='stylesheet', href='stylesheets/index.css')
  title Review Phim
include navbar.pug
.container.top-rated
  h2
    i.far.fa-star
  h2 Top rated movies
  .d-flex.flex-row.flex-movies
    each movie in topRatedMovies
      .movie-wrapper.mx-2
        .poster-wrapper
          a(href='/movies/' + movie.movieId)
            img.poster.img-fluid(src=movie.posterLink, alt='')
        a(href='/movies/' + movie.movieId)
          h3.movie-name #{movie.movieName}
.container.now-playing
  h2
    i.fas.fa-play
  h2 Now Playing
  .d-flex.flex-row.flex-movies
    each movie in nowPlayingMovies
      .movie-wrapper.mx-2
        .poster-wrapper
          a(href='/movies/' + movie.movieId)
            img.poster.img-fluid(src=movie.posterLink, alt='')
        a(href='/movies/' + movie.movieId)
          h3.movie-name #{movie.movieName}
    


include footer.pug
